<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="application.model.ProcessMeasure" table="PROCESS_MEASURE" catalog="CODE_MERGERS">
        <composite-id name="processMeasureId" class="application.model.ProcessMeasureId">
            <key-property name="indicatorFk" column="indicator_fk"></key-property>
            <key-property name="workProcessFk" column="work_process_fk"></key-property>
            <key-property name="name" column="name"></key-property>
            <key-property name="variance" column="variance"></key-property>
            <key-property name="tolerance" column="tolerance"></key-property>
        </composite-id>
        <many-to-one name="indicator" class="application.model.Indicators" column="indicator_fk"/>
    </class>

</hibernate-mapping>